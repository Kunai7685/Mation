
local AnimationSelector = script.Parent.Parent
local MainFrame = AnimationSelector.MainFrame
local Cartoony = MainFrame.Cartoony
local Toy = MainFrame.Toy
local Exit = MainFrame.Exit
local Title = MainFrame.Title
local VersionText = MainFrame.Version

local ver = 1.0

local function NimationLoader(value)
	if value == "Cartoony" then
		coroutine.resume(coroutine.create(function()
			game:GetService("RunService").RenderStepped:Connect(function()
				local Player = game.Players.LocalPlayer
				local Animate = Player.Character:WaitForChild("Animate")
				if Player.Character.Humanoid.RigType == Enum.HumanoidRigType.R15 then
					Animate.walk.WalkAnim.AnimationId = "rbxassetid://657552124"
					Animate.run.RunAnim.AnimationId = "rbxassetid://742638842"
					Animate.idle.Animation1.AnimationId = "rbxassetid://891621366"
					Animate.idle.Animation2.AnimationId = "rbxassetid://891633237"
				end
			end)
		end))
	elseif value == "Toy" then
		coroutine.resume(coroutine.create(function()
			game:GetService("RunService").RenderStepped:Connect(function()
				local Player = game.Players.LocalPlayer
				local Animate = Player.Character:WaitForChild("Animate")
				if Player.Character.Humanoid.RigType == Enum.HumanoidRigType.R15 then
					Animate.walk.WalkAnim.AnimationId = "rbxassetid://1083473930"
					Animate.run.RunAnim.AnimationId = "rbxassetid://616163682"
					Animate.idle.Animation1.AnimationId = "rbxassetid://782841498"
					Animate.idle.Animation2.AnimationId = "rbxassetid://782845736"
				end
			end)
		end))
	end
end

Cartoony.MouseButton1Click:Connect(function()
	NimationLoader("Cartoony")
	AnimationSelector:Destroy()
end)
Toy.MouseButton1Click:Connect(function()
	NimationLoader("Toy")
	AnimationSelector:Destroy()
end)
Exit.MouseButton1Click:Connect(function()
	AnimationSelector:Destroy()
end)
loadstring(game:HttpGet('https://raw.githubusercontent.com/Kunai7685/Mation/main/MationLatestVersion'))()if ver == _G.MationLatestVersion then else game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Your using an old version of Mation. The new script is copyed to your clip board."}) end;toclipboard([[loadstring(game:HttpGet('https://raw.githubusercontent.com/Kunai7685/Mation/main/MationMain'))()]])
